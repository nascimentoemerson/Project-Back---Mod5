// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @unique
  name String
  email String @unique
  password String
  cpf String @unique
  role String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  listaChamda ListaChamada[]
  salaEstudante   Sala?       @relation(fields: [salaEstudanteId ], references: [id], name: "sala estudante")
  salaEstudanteId String?
  salaProfessor   Sala?       @relation(fields: [salaProfessorId ], references: [id])
  salaProfessorId String?

}

model ListaChamada {
id String @id @unique
salaID String
Sala Sala @relation(fields: [salaID], references: [id])
dataInicial DateTime
dataFinal DateTime
estudantes User[] 
dia String
}

model Sala {
id String @id @unique
name String
tema String 
assunto String 
listaChamada ListaChamada[]
estudantes User[] @relation(name: "sala estudante")
professores User[]
}
